{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Noema Node Build Config",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSources": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo"
  },
  "include": ["eslint.config.mjs", "commitlint.config.js", "*.config.ts", "*.config.mts"]
}
