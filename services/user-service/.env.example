# ==============================================================================
# Noema User Service - Environment Variables
# ==============================================================================
# Copy this file to .env and fill in your values

# ------------------------------------------------------------------------------
# Service Configuration
# ------------------------------------------------------------------------------
SERVICE_NAME=user-service
SERVICE_VERSION=1.0.0
NODE_ENV=development

# ------------------------------------------------------------------------------
# Server Configuration
# ------------------------------------------------------------------------------
HOST=0.0.0.0
PORT=3002

# ------------------------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------------------------
# PostgreSQL connection string
DATABASE_URL=postgresql://noema:noema_dev_password@localhost:5434/noema_user?schema=public

# ------------------------------------------------------------------------------
# Redis Configuration
# ------------------------------------------------------------------------------
REDIS_URL=redis://localhost:6380
REDIS_EVENT_STREAM=noema:events:user-service
REDIS_STREAM_MAX_LEN=10000

# ------------------------------------------------------------------------------
# JWT Configuration
# ------------------------------------------------------------------------------
# IMPORTANT: Generate strong secrets for production!
# Use: openssl rand -base64 64
ACCESS_TOKEN_SECRET=your-super-secret-access-token-key-min-32-chars
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-min-32-chars
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d
JWT_ISSUER=noema.app
JWT_AUDIENCE=noema.app

# ------------------------------------------------------------------------------
# Security Configuration
# ------------------------------------------------------------------------------
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# ------------------------------------------------------------------------------
# Logging Configuration
# ------------------------------------------------------------------------------
LOG_LEVEL=debug
LOG_PRETTY=true
