# Copy this file to .env and fill in your values

# ------------------------------------------------------------------------------
# Service Configuration
# ------------------------------------------------------------------------------
SERVICE_NAME=content-service
SERVICE_VERSION=1.0.0
NODE_ENV=development

# ------------------------------------------------------------------------------
# Server Configuration
# ------------------------------------------------------------------------------
HOST=0.0.0.0
PORT=3005

# ------------------------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------------------------
# PostgreSQL connection string (separate database per service)
DATABASE_URL=postgresql://noema:noema_dev_password@localhost:5434/noema_content?schema=public

# ------------------------------------------------------------------------------
# Redis Configuration
# ------------------------------------------------------------------------------
REDIS_URL=redis://localhost:6380
REDIS_EVENT_STREAM=noema:events:content-service
REDIS_STREAM_MAX_LEN=10000

# ------------------------------------------------------------------------------
# JWT Configuration (verification only - tokens issued by user-service)
# ------------------------------------------------------------------------------
# Must match user-service's ACCESS_TOKEN_SECRET
ACCESS_TOKEN_SECRET=your-super-secret-access-token-key-min-32-chars
JWT_ISSUER=noema.app
JWT_AUDIENCE=noema.app

# ------------------------------------------------------------------------------
# CORS Configuration
# ------------------------------------------------------------------------------
CORS_ORIGIN=http://localhost:3000,http://localhost:3004,http://localhost:3003
CORS_CREDENTIALS=true

# ------------------------------------------------------------------------------
# MinIO Object Storage
# ------------------------------------------------------------------------------
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=noema
MINIO_SECRET_KEY=noema_minio_password
MINIO_BUCKET=content
MINIO_PRESIGNED_EXPIRY=3600

# ------------------------------------------------------------------------------
# Logging Configuration
# ------------------------------------------------------------------------------
LOG_LEVEL=debug
LOG_PRETTY=true
