{
  "name": "noema",
  "version": "0.1.0",
  "private": true,
  "description": "AI-Enhanced Learning Platform with Metacognitive Capabilities",
  "license": "SEE LICENSE IN LICENSE.txt",
  "author": "Noema Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/AnrPg/noema.git"
  },
  "packageManager": "pnpm@9.14.4",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter='./packages/*'",
    "build:services": "turbo run build --filter='./services/*'",
    "build:agents": "turbo run build --filter='./agents/*'",
    "dev": "turbo run dev",
    "dev:services": "turbo run dev --filter='./services/*'",
    "dev:mobile": "turbo run dev --filter='./apps/mobile'",
    "dev:web-admin": "turbo run dev --filter='./apps/web-admin'",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:e2e": "turbo run test:e2e",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:turbo": "rm -rf .turbo && turbo run clean",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "db:push": "turbo run db:push",
    "db:studio": "turbo run db:studio",
    "docker:up": "docker compose -f docker-compose.yml -f docker-compose.local.yml up -d",
    "docker:down": "docker compose -f docker-compose.yml -f docker-compose.local.yml down",
    "docker:logs": "docker compose -f docker-compose.yml -f docker-compose.local.yml logs -f",
    "docker:build": "docker compose -f docker-compose.yml build",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "18",
        "react-dom": "18"
      }
    }
  }
}
